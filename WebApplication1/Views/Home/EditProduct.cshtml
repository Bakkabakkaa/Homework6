@model Product

<div>
    <h3>Редактирование продукта:</h3>
    <form action="@Url.Action("UpdateProduct", "Home")" method="post">
        <input type="hidden" name="ID" value="@Model.ID"/>
        Category:<br/>
        <input type="text" name="Category" value="@Model.Category"/><br/>
        Description:<br/>
        <input type="text" name="Description" value="@Model.Description"/><br/>
        Price:<br/>
        <input type="number" name="Price" value="@Model.Price"/><br/>
        Quantity:<br/>
        <input type="number" name="Quantity" value="@Model.Quantity"/><br/>
        <input type="submit" value="Update"/><br/>
    </form>
</div>